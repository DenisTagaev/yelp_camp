<% layout('layouts/boilerplate') %> 
    <div id="map"></div>
    <h1 class="text-center text-primary">List of campgrounds</h1>
    
    <% for(let camp of campgrounds) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%=camp.images.length? camp.images[0].url : ''%>" alt="campground image" class="img-fluid" crossorigin="anonymous">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"></h5><%= camp.title %></>
                        <p class="card-text"><%= camp.description %> </p>
                        <p class="card-text">
                            <small class="text-muted"><%= camp.location %> </small>
                        </p>
                        <a href="/campgrounds/<%= camp._id %> " class="btn btn-primary">View <%= camp.title %> </a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
    <%- include('../elements/footer.ejs') %>
<!-- passing the camp data to the custom map  -->
<script>
    const token = '<%=process.env.MAPBOX_TOKEN%>';
    const campgrounds = { features: <%-JSON.stringify(campgrounds)%> };
</script>  
<script src="/js/clusterMap.js"></script>