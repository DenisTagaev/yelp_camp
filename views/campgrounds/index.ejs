<% layout('layouts/boilerplate') %> 
    <h1>All campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Create new campgrounds</a>
    </div>
    
    <% for(let camp of campgrounds) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%=camp.images.length? camp.images[0].url : ''%>" alt="campground image" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"></h5><%= camp.title %></>
                        <p class="card-text"><%= camp.description %> </p>
                        <p class="card-text">
                            <small class="text-muted"><%= camp.location %> </small>
                        </p>
                        <a href="/campgrounds/<%= camp._id %> " class="btn btn-primary">View <%= camp.title %> </a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>  