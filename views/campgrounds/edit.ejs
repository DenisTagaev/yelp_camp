<% layout('layouts/boilerplate') %> 

<div class="row">
    <h1 class="text-center">Edit campground</h1>
        <div class="card shadow my-3">
            <div class="card-body">
                <form 
                action="/campgrounds/<%= campground._id %>?_method=PUT"
                method="post" 
                class="non-validated"
                enctype="multipart/form-data" 
                novalidate>
                    <div class="row">
                        <h6>Remove Image(s)</h6>
                        <div class="col-sm-12 col-md-6">
                            <div class="row row-cols-1 row-cols-md-3 g-2 mb-3">
                                <% campground.images.forEach(function(img, i){ %>
                                <div class="col">
                                    <div class="card">
                                        <img src="<%=img.thumbnail%>" class="card-img" alt="campground image thumbnail" crossorigin="anonymous">
                                        <div class="card-img-overlay text-end pt-1 pe-2">
                                            <input class="form-check-input" type="checkbox" value="<%=img.filename%>" name="deleteImages[]"
                                            id="image-<%=i%>">
                                            <label class="form-check-label visually-hidden" for="image-<%=i%>">
                                                Check to remove image
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="mb-3">
                                <label class="form-label" for="title">Title</label>
                                <input 
                                    class="form-control" 
                                    type="text" 
                                    id="title" 
                                    name="campground[title]" 
                                    placeholder="title"
                                    value="<%= campground.title %>" 
                                    required>
                                <div class="valid-feedback">Looks great!</div>    
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="location">Location</label>
                                <input 
                                    class="form-control" 
                                    type="text" 
                                    id="location" 
                                    name="campground[location]" 
                                    placeholder="location"
                                    value="<%= campground.location %>" 
                                    required>
                                <div class="valid-feedback">Looks great!</div>    
                            </div> 
                            <div class="mb-3">
                                <label class="form-label" for="campImage">Add image(s)...</label>
                                <div class="input-group">
                                    <input 
                                    class="form-control" 
                                    type="file" 
                                    id="campImage" 
                                    name="image" 
                                    multiple>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="price">Campground price</label>
                                <div class="input-group">
                                    <span class="input-group-text" id="price-label">$</span>
                                    <input 
                                    type="text" 
                                    class="form-control" 
                                    id="price" 
                                    placeholder="0.00" 
                                    aria-label="Amount (to the nearest dollar)"
                                    aria-describedby="price-label" 
                                    name="campground[price]" 
                                    value="<%= campground.price %>" 
                                    required>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="description">Description</label>
                                <textarea 
                                class="form-control" 
                                type="text" 
                                id="description" 
                                name="campground[description]" 
                                placeholder="location" 
                                required
                                ><%=campground.description %>
                            </textarea>
                                <div class="valid-feedback">Looks great!</div>    
                            </div>
                            <div class="mb-3">
                                <button class="btn btn-warning">Update campground</button>
                            </div>
                            <a class="mt-2 btn btn-outline-dark" href="/campgrounds/<%= campground._id %>">Back to campground</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
</div>