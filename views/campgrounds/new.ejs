<% layout('layouts/boilerplate') %> 

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-md-6 offset-md-3">
        <div class="card shadow my-3">
            <div class="card-body">
                <form 
                action="/campgrounds" 
                method="post" 
                class="non-validated" 
                enctype="multipart/form-data"
                novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="campground[title]" placeholder="title" required>
                        <div class="valid-feedback">Looks great!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="campground[location]" placeholder="location" required>
                        <div class="valid-feedback">Looks great!</div>
                    </div> 
                    
                    <div class="mb-3">
                        <label class="form-label" for="price">Campground price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">$</span>
                            <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="Amount (to the nearest dollar)"
                            aria-describedby="price-label" name="campground[price]" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" id="description" name="campground[description]" placeholder="location" required></textarea>
                        <div class="valid-feedback">Looks great!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="campImage">Add image(s)...</label>
                        <div class="input-group">
                            <input class="form-control" type="file" id="campImage" name="image" multiple>
                        </div>
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-success">Save</button>
                    </div>
                </form>
                <a class="mt-2 btn btn-outline-dark" href="/campgrounds">Back to the campgrounds</a>
            </div>
        </div>
    </div>
</div>